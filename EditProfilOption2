<body>
    <header class="header">
        <p class="logo">List it</p>
    </header>
    <main>
        <section>
            <h1 class="heading">Profile information</h1>
            <div class="form">
                <p>Username</p>
                <input type="text" id="inpUsername" placeholder=" New username">
                <p>Old password</p>
                <input type="password" id="inpPwrd" placeholder=" Old password">
                <p>New password</p>
                <input type="email" id="inpEmail" placeholder="New password">
                <br>
                <br>
                <button class="createUser" id="updateBtn">Update info</button>
                <button style="margin-left: 20%"> Back <a href="/login"></a> </button>
            </div>
        </section>
    </main>
